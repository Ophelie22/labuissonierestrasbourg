{% extends 'base.html.twig' %}

{% block title %}
La Buisssonière -  Ensemble des document rendu public par les différentes commissions
{% endblock %}

{% block body %}
	<div class="container mt-4">
		{% if not articles.items is same as([]) %}
		<h1> Documents visible par l'ensemble des commissions de la Buisssonière</h1>
			<div class="d-flex justify-content-center flex-wrap">
				{% for article in articles %}
					<div class="card border-primary mb-3" style="max-width: 20rem;">
						<div class="card-header">Article n°{{ article.id }}</div>
						<div class="card-body">
							<h4 class="card-title">
								<a href="{{ path('article.show', {id: article.id}) }}">{{ article.name }}</a>
							</h4>
							<p class="card-text">{{ article.description|slice(0, 100) ~ '...' }}</p>
						</div>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<h4>Il n'y a pas de documents</h4>
		{% endif %}
	</div>
{% endblock %}
