{% extends "base.html.twig" %}
{% block title %}La Buissoniere - Modification des commissions
{% endblock %}
{% block body %}
	<div class="container">

		<h1 class="mt-4">Modification de la categorie</h1>

		<form name="category" method="post">

		<div class="form-group">
			{{ form_label(form.name) }}
			{{ form_widget(form.name) }}
			<div class="form-error">
				{{ form_errors(form.name) }}
			</div>
		</div>
		{{ form_row(form._token) }}
		
		<button type="submit" id="category_submit" name="category[submit]" class="btn-btn-primary mt-4">Cr√©er une rubrique
			commission</button>

	</div>
</form>
</div>{% endblock %}

